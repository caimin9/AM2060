double[,] datatosave = new double[5, 2] { {1,1 }, {2,4 }, {3,9 }, {4,16 }, {5,25 } };
StreamWriter sw = new StreamWriter("C:\\Users\\km\\source\\data.csv");
int i = 0;

 for(i = 0; i < datatosave.GetLength(0); i++)
  {
       sw.WriteLine("{0:F3}, {1:F3}", datatosave[i,0], datatosave[i, 1]);
  }
 sw.Close();
